<brls:Box
        width="auto"
        height="auto">

    <brls:ScrollingFrame
            width="auto"
            height="auto"
            axis="column"
            alignItems="stretch"
            grow="1.0">

        <brls:Box
                width="auto"
                height="auto"
                axis="column"
                alignItems="stretch"
                paddingTop="@style/brls/sidebar/padding_top"
                paddingRight="@style/brls/sidebar/padding_right"
                paddingBottom="@style/brls/sidebar/padding_bottom"
                paddingLeft="@style/brls/sidebar/padding_left">

            <brls:SelectorCell
                    id="mode"/>

            <brls:SelectorCell
                    id="update"/>

            <brls:Header
                    width="auto"
                    height="auto"
                    title="@i18n/main/header/pixels"
                    marginTop="15px"
                    marginBottom="15px"/>

            <brls:Box
                    width="auto"
                    height="auto"
                    axis="row">

                <brls:Label
                        id="pixels_lbl"
                        width="80"
                        height="40"
                        text="100"
                        marginBottom="10px"
                        horizontalAlign="center"
                        verticalAlign="center"/>

                <brls:Slider
                        id="pixels"
                        width="auto"
                        height="40"
                        grow="1"/>

            </brls:Box>

        </brls:Box>

    </brls:ScrollingFrame>

</brls:Box>
